{
  "name": "strongpoint",
  "version": "1.0.0",
  "description": "Library for defining, serving and consuming strongly typed endpoints in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf \"./index.+(d.ts|js|map)\" \"./server/**/*.+(d.ts|js|map)\" \"./shared/**/*.+(d.ts|js|map)\" \"./client/**/*.+(d.ts|js|map)\" \"./tests/**/*.+(js|map)\"",
    "build": "tsc -p ./tsconfig.json",
    "build-watch": "npm run build --silent -- -w",
    "build:tests": "tsc -p ./tests/tsconfig.tests.json",
    "build-watch:tests": "npm run build:tests --silent -- -w",
    "test": "mocha -r ts-node/register -r source-map-support/register -r ./tests/infrastructure/sinonChai.ts **/*.test.ts --recursive",
    "test:coverage": "nyc npm test",
    "prepublish": "npm run build"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeandcats/strongpoint.git"
  },
  "keywords": [
    "strongpoint",
    "strong-point",
    "strongly",
    "typed",
    "endpoints",
    "express",
    "TypeScript",
    "typesafe",
    "type-safe",
    "type",
    "safe",
    "rest",
    "api"
  ],
  "author": "Ben <codeandcats@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/codeandcats/strongpoint/issues"
  },
  "homepage": "https://github.com/codeandcats/strongpoint#readme",
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.js",
      "**/*.d.ts",
      "**/*.test.ts",
      "coverage",
      "node_modules"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "**/*.ts"
    ],
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/deep-freeze": "0.1.1",
    "@types/es6-promise": "3.3.0",
    "@types/express": "4.11.1",
    "@types/mocha": "2.2.48",
    "@types/sinon": "4.3.0",
    "@types/sinon-chai": "2.7.29",
    "chai": "4.1.2",
    "concurrently": "3.5.1",
    "express": "4.16.2",
    "koa-router": "7.4.0",
    "mocha": "5.0.0",
    "nyc": "11.4.1",
    "rimraf": "2.6.2",
    "sinon": "4.4.2",
    "sinon-chai": "2.14.0",
    "source-map-support": "0.5.3",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  },
  "dependencies": {
    "axios": "0.18.0",
    "typed-tuple": "1.0.1"
  }
}
