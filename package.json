{
  "name": "strongpoint",
  "version": "1.0.0",
  "description": "Library for defining, serving and consuming strongly typed endpoints in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "clean": "npm run clean:dist && npm run clean:tests --silent",
    "clean:dist": "rimraf ./dist",
    "clean:tests": "rimraf ./tests-output",
    "build": "npm run clean:dist --silent && npm run build:entry --silent && npm run build:server --silent && npm run build:client --silent",
    "build:client": "tsc -p ./src/tsconfig.client.json",
    "build:entry": "tsc -p ./src/tsconfig.entry.json",
    "build:server": "tsc -p ./src/tsconfig.server.json",
    "build:tests": "tsc -p ./tests/tsconfig.tests.json",
    "test": "npm run clean:tests --silent && npm run build:tests --silent && npm run test-run --silent",
    "test-run": "mocha -r ./tests-output/tests/infrastructure/testSetup.js ./tests-output/tests/**/*.test.js --recursive",
    "test:coverage": "nyc npm test",
    "prepublishOnly": "npm run build"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeandcats/strongpoint.git"
  },
  "keywords": [
    "strongpoint",
    "strong-point",
    "strongly",
    "typed",
    "endpoints",
    "express",
    "TypeScript",
    "typesafe",
    "type-safe",
    "type",
    "safe",
    "rest",
    "api"
  ],
  "author": "Ben <codeandcats@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/codeandcats/strongpoint/issues"
  },
  "homepage": "https://github.com/codeandcats/strongpoint#readme",
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.js",
      "**/*.d.ts",
      "**/*.test.ts",
      "coverage",
      "node_modules"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "**/*.ts"
    ],
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/chai-as-promised": "7.1.0",
    "@types/clone": "0.1.30",
    "@types/deep-freeze": "0.1.1",
    "@types/es6-promise": "3.3.0",
    "@types/express": "4.11.1",
    "@types/get-port": "3.2.0",
    "@types/mocha": "2.2.48",
    "@types/sinon": "4.3.0",
    "@types/sinon-chai": "2.7.29",
    "@types/uuid": "3.4.3",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "chalk": "2.3.2",
    "clone": "2.1.1",
    "concurrently": "3.5.1",
    "express": "4.16.2",
    "get-port": "3.2.0",
    "inversify": "4.11.1",
    "koa-router": "7.4.0",
    "linq": "3.0.9",
    "mocha": "5.0.0",
    "npm": "5.8.0",
    "nyc": "11.4.1",
    "rimraf": "2.6.2",
    "sinon": "4.4.2",
    "sinon-chai": "2.14.0",
    "source-map-support": "0.5.3",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "2.7.2",
    "uuid": "3.2.1"
  },
  "dependencies": {
    "axios": "0.18.0",
    "http-status-codes": "1.3.0",
    "reflect-metadata": "0.1.12",
    "typed-tuple": "1.0.1",
    "typelevel-ts": "0.2.3"
  }
}